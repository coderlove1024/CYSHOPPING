/* pages/goods_detail/index.wxss */
page {
  padding-bottom: 100rpx;
}
.swiper {
  height: 65vw;
  text-align: center;
}
.swiper image {
  width: 60%;
}
.goods_price {
  color: var(--themeColor);
  font-weight: 600;
  font-size: 32rpx;
  margin: 10rpx 0 30rpx;
}
.goodsinfo {
  display: flex;
  font-size: 31rpx;
  padding-bottom: 10rpx;
  color: #000;
  border-bottom: 17rpx solid #ccc;
}
.goodsinfo .left {
  flex: 7;
  border-right: 2px solid #ccc;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goodsinfo .right {
  flex: 2;
  text-align: center;
}
.goodsBaseInfo .infoTitle {
  color: var(--themeColor);
  font-size: 30rpx;
  padding: 30rpx;
  margin-bottom: 6rpx;
  font-weight: 600;
}
.goodsBaseInfo .infoContent {
  border-top: 5rpx solid #ccc;
}
.bottomBar {
  position: fixed;
  display: flex;
  height: 100rpx;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #ccc;
}
.bottomBar .bottom-left {
  flex: 6;
  display: flex;
  background-color: #ccc;
}
.bottomBar .bottom-left .kefu,
.bottomBar .bottom-left .share,
.bottomBar .bottom-left .shopCar {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.bottomBar .bottom-left .kefu button,
.bottomBar .bottom-left .share button,
.bottomBar .bottom-left .shopCar button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.bottomBar .bottom-right {
  flex: 6;
  display: flex;
  line-height: 90rpx;
  text-align: center;
  font-size: 25rpx;
}
.bottomBar .bottom-right .addCart,
.bottomBar .bottom-right .buyNow {
  flex: 1;
}
.bottomBar .bottom-right .addCart {
  color: #ffecc1;
  background-color: #ffa400;
}
.bottomBar .bottom-right .buyNow {
  color: #ffecc1;
  background-color: #f0544f;
}
