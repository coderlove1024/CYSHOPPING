.tab {
  display: flex;
}
.tab .tabItem {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 33rpx;
}
.active {
  color: var(--themeColor);
  border-bottom: 1px solid currentColor;
}
.goods_item {
  display: flex;
  padding: 33rpx 0;
  font-size: 30rpx;
}
.goods_item .goodsLeft {
  flex: 2;
}
.goods_item .goodsLeft image {
  width: 80%;
}
.goods_item .goodsRight {
  position: relative;
  flex: 5;
}
.goods_item .goodsRight .goods_price {
  position: absolute;
  bottom: 5rpx;
  left: 13rpx;
  font-size: 34rpx;
  color: var(--themeColor);
}
.scrollContent {
  height: calc(100vh - 90rpx);
}
